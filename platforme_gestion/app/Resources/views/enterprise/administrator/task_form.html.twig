{# empty Twig template #}
{% extends 'index.html.twig' %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-xs-12">
                <div class="col-lg-8 col-md-8 col-xs-8">
                    <form>
                        <div class="form-group">
                            <label for="titleTask">Title Task</label>
                            <input type="text" class="form-control" id="titleTask" aria-describedby="titleTask" placeholder="Title">

                        </div>
                        <div class="form-group">
                            <label for="descriptionTask">Description</label>
                            <textarea class="form-control" id="descTask" rows="3"></textarea>

                        </div>

                        <div class="form-group">
                            <label for="userAssigned">User Assigned</label>
                            <select class="form-control" id="userAssigned">
                                <option>Usr1</option>
                                <option>Usr2</option>
                                <option>Usr3</option>
                                <option>Usr4</option>
                                <option>Usr5</option>
                            </select>

                        </div>

                        <div class="form-group">
                            <label for="userAssigned">Priority</label>
                            <select class="form-control" id="priority">
                                <option>Priority 1 (urgent)</option>
                                <option>Priority 2 (prioritaire)</option>
                                <option>Priority 3 (normale)</option>
                                <option>Priority 3 (faible)</option>
                            </select>

                        </div>

                        <div class="form-group">
                            <label for="Status">Task Status</label>
                            <select class="form-control" id="status">
                                <option>New</option>
                                <option>In Progress</option>
                                <option>Rejected</option>
                                <option>Validated</option>
                                <option>Closed</option>
                            </select>

                        </div>

                        <div class="form-group">
                            <label for="titleTask">Module Assigned</label>
                            <input type="text" class="form-control" id="moduleAssigned" aria-describedby="module" placeholder="module">

                        </div>

                        <button type="submit" class="btn btn-lg btn-primary">Save</button>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}